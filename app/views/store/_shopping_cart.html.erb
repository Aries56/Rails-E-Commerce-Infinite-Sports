<h4>Shopping Cart</h4>

<% if session[:products].empty? %>
  <p>Your shopping cart is empty</p>
<% else %>
  <% @shopping_cart.each do |product| %>
    <p>
      <%= product.name %>
      <%= form_tag remove_from_cart_path(product) do %>
      <%= submit_tag 'Remove from cart' %>
      <% end %>
    </p>
  <% end %>
  <%= form_tag checkout_path do %>
  <%= submit_tag 'Checkout' %>
  <% end %>
<% end %>